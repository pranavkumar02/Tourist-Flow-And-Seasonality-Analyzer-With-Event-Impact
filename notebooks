      "cell_type": "code",
      "source": [
        "def monthly_visitors(df,years_to_include=None):\n",
        "  monthly_vistors=df.groupby(['Month','Year'])['Recreation Visits'].sum().reset_index().sort_values(by=['Month','Year'],\n",
        "                                                                                                    ascending=[True,True])\n",
        "  if years_to_include is not None:\n",
        "    monthly_vistors=monthly_vistors[monthly_vistors['Year'].isin(years_to_include)]\n",
        "  month_names = {1:'Jan', 2:'Feb', 3:'Mar', 4:'Apr', 5:'May', 6:'Jun',7:'Jul', 8:'Aug', 9:'Sep', 10:'Oct', 11:'Nov', 12:'Dec'}\n",
        "  monthly_vistors['Month'] = monthly_vistors['Month'].map(month_names)\n",
        "  fig=px.line(monthly_vistors,x='Month',y='Recreation Visits',color='Year',title='Monthly Recreation Visits',markers=True)\n",
        "  fig.update_layout(xaxis_title='Month',yaxis_title='Recreation Visits',showlegend=False,title_x=0.5)\n",
        "  return fig.show()\n"
      ],
      "metadata": {
        "id": "fep436EJ_anC"
