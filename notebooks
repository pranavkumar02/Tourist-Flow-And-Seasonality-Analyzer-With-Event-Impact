      "cell_type": "code",
      "source": [
        "def Visitorintensity_Region_Month(df):\n",
        " visitor_intensity = (df.groupby(['Region', 'Month'], as_index=False)['Recreation Visits'].sum())\n",
        "\n",
        " month_names = {1:'Jan', 2:'Feb', 3:'Mar', 4:'Apr', 5:'May', 6:'Jun',7:'Jul', 8:'Aug', 9:'Sep', 10:'Oct', 11:'Nov', 12:'Dec'}\n",
        " visitor_intensity['Month'] = visitor_intensity['Month'].map(month_names)\n",
        "\n",
        " fig = px.density_heatmap(visitor_intensity,x='Month',y='Region',z='Recreation Visits',color_continuous_scale='YlOrRd'\n",
        " ,title='Visitor Intensity by Region and Month',labels={'Recreation Visits': 'Total Visits'})#Creating Heatmap\n",
        " fig.update_layout(xaxis_title='Month',yaxis_title='Region',title_x=0.5,coloraxis_colorbar=dict(title='Visitor Intensity'))\n",
        " return fig.show()"
      ],
      "metadata": {
        "id": "bKa68XvnY6rr"
      },
      "execution_count": null,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "def Visitorintensity_Month_Decade(df):\n",
        " df['Decade']=(df['Year']//10)*10\n",
        " pivot = df.pivot_table(index='Decade',columns='Month', values='Recreation Visits', aggfunc='sum')\n",
        " pivot.columns = ['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec'][:len(pivot.columns)]\n",
        " fig = px.imshow(pivot,color_continuous_scale='Viridis',labels=dict(x=\"Month\", y=\"Decade\",\n",
        "                                                                   color=\"Recreation Visits\"),title='Visitor Intensity by Decade and Month')\n",
        " fig.update_layout(width=1200,height=600,title_x=0.5,xaxis_title='Month',yaxis_title='Decade',xaxis=dict(side=\"top\"))\n",
        " return fig.show()"
      ],
      "metadata": {
        "id": "kckXdnH7j8-G"
      },
      "execution_count": null,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "def Visitorintensity_Region_Decade(df):\n",
        "  df['Decade']=(df['Year']//10)*10\n",
        "  pivot = df.pivot_table(index='Decade',columns='Region', values='Recreation Visits', aggfunc='sum')\n",
        "  fig = px.imshow(pivot,color_continuous_scale='Viridis',labels=dict(x=\"Region\", y=\"Decade\",\n",
        "                                                                   color=\"Recreation Visits\"),title='Visitor Intensity by Decade and Region')\n",
        "  fig.update_layout(width=1200,height=600,title_x=0.5,xaxis_title='Region',yaxis_title='Decade',xaxis=dict(side=\"top\"))\n",
        "  return fig.show()"
      ],
