    {
      "cell_type": "code",
      "source": [
        "def visitors_region(df):\n",
        " df['YearMonth'] = pd.to_datetime(df['Year'].astype(str) + \"-\" + df['Month'].astype(str).str.zfill(2) + \"-01\")\n",
        " monthly_region=df.groupby(['Region','YearMonth'])['Recreation Visits'].sum().reset_index().sort_values(by=['Region','YearMonth'],ascending=False)\n",
        " regions = monthly_region['Region'].unique().tolist()\n",
        " full_idx = pd.date_range(start=monthly_region['YearMonth'].min(),end=monthly_region['YearMonth'].max(),freq='MS')\n",
        " all_combinations = pd.MultiIndex.from_product([regions, full_idx],names=['Region','YearMonth'])\n",
        " complete = monthly_region.set_index(['Region','YearMonth']).reindex(all_combinations,fill_value=0).reset_index()\n",
        " complete = complete.sort_values(['Region','YearMonth'])\n",
        " complete['Visits_3mo'] = complete.groupby('Region')['Recreation Visits'].transform(lambda s: s.rolling(3, min_periods=1).sum())\n",
        " fig_line = px.line(complete,x='YearMonth',y='Visits_3mo',color='Region',title='3-month Rolling Total Recreation Visits by Region',labels={'Visits_3mo':'3-month Total Visits', 'YearMonth':'Month'})\n",
        " fig_line.update_layout(xaxis=dict(rangeselector=dict(buttons=list([dict(count=12, label=\"1y\", step=\"month\", stepmode=\"backward\"),dict(count=24, label=\"2y\", step=\"month\", stepmode=\"backward\"),\n",
        "  dict(count=36, label=\"3y\", step=\"month\", stepmode=\"backward\"),\n",
        "  dict(step=\"all\")])), rangeslider=dict(visible=True), type=\"date\"),legend_title_text='Region',title_x=0.5)\n",
        " return fig_line.show()"
      ],
      "metadata": {
        "id": "feXk9SMpNYNr"
      },
      "execution_count": null,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "def visitors_park(df,parks_to_include=None):\n",
        "  df['YearMonth'] = pd.to_datetime(df['Year'].astype(str) + \"-\" + df['Month'].astype(str).str.zfill(2) + \"-01\")\n",
        "  monthly_park=df.groupby(['Park','YearMonth'])['Recreation Visits'].sum().reset_index().sort_values(by=['Park','YearMonth'],ascending=False)\n",
        "  if parks_to_include is not None:\n",
        "   monthly_park = monthly_park[monthly_park['Park'].isin(parks_to_include)]\n",
        "  parks = monthly_park['Park'].unique().tolist()\n",
        "  full_idx = pd.date_range(start=monthly_park['YearMonth'].min(),end=monthly_park['YearMonth'].max(),freq='MS')\n",
        "  all_combinations = pd.MultiIndex.from_product([parks, full_idx],names=['Park','YearMonth'])\n",
        "  complete = monthly_park.set_index(['Park','YearMonth']).reindex(all_combinations,fill_value=0).reset_index()\n",
        "  complete = complete.sort_values(['Park','YearMonth'])\n",
        "  complete['Visits_3mo'] = complete.groupby('Park')['Recreation Visits'].transform(lambda s: s.rolling(3, min_periods=1).sum())\n",
        "  fig_line = px.line(complete,x='YearMonth',y='Visits_3mo',color='Park',title='3-month Rolling Total Recreation Visits by Park',labels={'Visits_3mo':'3-month Total Visits','YearMonth':'Month-Year'})\n",
        "  fig_line.update_layout(xaxis=dict(rangeselector=dict(buttons=list([dict(count=12, label=\"1y\", step=\"month\",stepmode=\"backward\"),\n",
        "  dict(count=24, label=\"2y\", step=\"month\", stepmode=\"backward\"),\n",
        "  dict(count=36, label=\"3y\", step=\"month\", stepmode=\"backward\"),\n",
        "  dict(step=\"all\")])),rangeslider=dict(visible=True), type=\"date\"),legend_title_text='Park',title_x=0.5)\n",
        "  return fig_line.show()"
      ],
      "metadata": {
        "id": "1RdV7qBdPqmw"
      },
      "execution_count": null,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "def visitors_state(df,states_to_include=None):\n",
        "  df['YearMonth'] = pd.to_datetime(df['Year'].astype(str) + \"-\" + df['Month'].astype(str).str.zfill(2) + \"-01\")\n",
        "  monthly_state=df.groupby(['State','YearMonth'])['Recreation Visits'].sum().reset_index().sort_values(by=['State','YearMonth'],\n",
        "                                                                                                       ascending=False)\n",
        "  if states_to_include is not None:\n",
        "    monthly_state = monthly_state[monthly_state['State'].isin(states_to_include)]\n",
        "  states = monthly_state['State'].unique().tolist()\n",
        "  full_idx = pd.date_range(start=monthly_state['YearMonth'].min(),end=monthly_state['YearMonth'].max(),freq='MS')\n",
        "  all_combinations = pd.MultiIndex.from_product([states, full_idx],names=['State','YearMonth'])\n",
        "  complete = monthly_state.set_index(['State','YearMonth']).reindex(all_combinations,fill_value=0).reset_index()\n",
        "  complete = complete.sort_values(['State','YearMonth'])\n",
        "  complete['Visits_3mo'] = complete.groupby('State')['Recreation Visits'].transform(lambda s: s.rolling(3, min_periods=1).sum())\n",
        "  fig_line = px.line(complete,x='YearMonth',y='Visits_3mo',color='State',title='3-month Rolling Total Recreation Visits by State',\n",
        "                     labels={'Visits_3mo':'3-month Total Visits', 'YearMonth':'Month'})\n",
        "  fig_line.update_layout(xaxis=dict(rangeselector=dict(buttons=list([dict(count=12, label=\"1y\", step=\"month\", stepmode=\"backward\"),\n",
        "  dict(count=24, label=\"2y\", step=\"month\", stepmode=\"backward\"),dict(count=36, label=\"3y\", step=\"month\", stepmode=\"backward\"),\n",
        "  dict(step=\"all\")])), rangeslider=dict(visible=True), type=\"date\"),legend_title_text='State',title_x=0.5)\n",
        "  return fig_line.show()"
      ],
      "metadata": {
        "id": "bP-P6CwKPrS6"
      },
      "execution_count": null,
      "outputs": []
    },
